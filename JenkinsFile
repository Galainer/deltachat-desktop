pipeline {
    agent any
    
tools {nodejs "NodeJS"}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
			
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test-unit'
            }
        }
    }
    post{
    	failure{
			slackSend channel:'chatapp', color: 'good', message: 'Hope it works, failure', tokenCredentialid: 'slack-notification'
		}
		success{
			slackSend channel:'chatapp', color: 'good', message: 'Hope it works, succes', tokenCredentialid: 'slack-notification'
		}
    }
}
