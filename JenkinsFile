pipeline {
    agent any
    
tools {nodejs "NodeJS"}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
			
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test-unit'
            }
        }
    }
    post{
    	failure{
			echo "Build failure, *${currentBuild.currentResult}:* *${currentBuild.fullDisplayName}*"
			slackSend channel:'chatapp', color: 'good', message: 'Build failure, *${currentBuild.currentResult}:* *${currentBuild.fullDisplayName}*', tokenCredentialid: 'slack-notification'
		}
		success{
		echo "Build succes, *${currentBuild.currentResult}:* *${currentBuild.fullDisplayName}*"
			slackSend channel:'chatapp', color: 'good', message: 'Build Succes, *${currentBuild.currentResult}:* *${currentBuild.fullDisplayName}*', tokenCredentialid: 'slack-notification'
		}
    }
}
