@Library('jenkins-shared-library')_

pipeline {
    agent any
    
tools {nodejs "NodeJS"}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
			
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test-unit'
            }
        }
    }
    post{
    	failure{
			slackNotifier(currentBuild.currentResult)
            		cleanWs()
		}
		success{
			slackNotifier(currentBuild.currentResult)
           		 cleanWs()
		}
    }
}
